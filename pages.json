{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [{
			"name": "test", //模式名称
			"path": "pages/componentsC/test/index", //启动页面，必选
			"query": "id=1&name=2" //启动参数，在页面的onLoad函数里面得到
		}]
	},
	"pages": [
		//公共page
		{
			"path": "pages/login/index",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/my/main",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/login/register",
			"style": {
				"navigationBarTitleText": "注册"
			}
		},
		//大户
		{
			"path": "pages/land/home/main",
			"style": {
				"navigationBarTitleText": "我的农田"
			}
		},
		{
			"path": "pages/land/meal/main",
			"style": {
				"navigationBarTitleText": "营养套餐"
			}
		},
		{
			"path": "pages/land/record/main",
			"style": {
				"navigationBarTitleText": "施肥记录"
			}
		},
		//站点
		{
			"path": "pages/county/home/main",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/county/outlets/main",
			"style": {
				"navigationBarTitleText": "大户/网点信息"
			}
		},
		{
			"path": "pages/county/supplier/main",
			"style": {
				"navigationBarTitleText": "供应商管理"
			}
		},
		//商户
		{
			"path": "pages/business/home/main",
			"style": {
				"navigationBarTitleText": "产品管理"
			}
		}
	],

	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	},
	"tabBar": {
		"color": "#909399",
		"selectedColor": "#303133",
		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"list": [
			{
				"pagePath": "pages/land/home/main",
				"text": "我的农田"
			},
			{
				"pagePath": "pages/land/meal/main",
				"text": "营养套餐"
			},
			{
				"pagePath": "pages/land/record/main",
				"text": "施肥记录"
			},
			{
				"pagePath": "pages/my/main",
				"text": "我的"
			}
		]
	},
	"subPackages": [{
			"root": "pages/subLand", //大户
			"pages": [{
				"path": "map/main",
				"style": {
					"navigationBarTitleText": "新增农田"
				}
			}]
		},
		{
			"root": "pages/subCounty", //县站
			"pages": [{
				"path": "index",
				"style": {
					"navigationBarTitleText": "大户/网点信息"
				}
			}, {
				"path": "list",
				"style": {
					"navigationBarTitleText": "大户/网点信息"
				}
			}]
		},
		{
			"root": "pages/business", //供销商
			"pages": [

			]
		}

	],
	"preloadRule": {
		"pages/county/home/main": {
			"network": "all",
			"packages": ["pages/subCounty"]
		}
	}
}
